@model BiBilet.Web.ViewModels.EventEditModel

@{
    ViewBag.Title = "Etkinliği Sil";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h1 class="page-header">@ViewBag.Title</h1>

        <div class="panel panel-default" id="eventForm">
            <div class="panel-body">

                <div class="alert alert-info">
                    Etkinliğinizi silmeden önce katılımıcılarınızı uyarmanız ve varsa satın alınmış olan
                    etkinlik biletlerini iade etmeniz önerilir.
                </div>

                <div class="alert alert-danger">
                    <b>Bu etkinliğe ait tüm biletler silinecektir!</b>
                </div>

                <p class="lead">
                    <b>@Model.Title</b> isimli etkinliği iptal edip silmek istediğinizden emin misiniz?
                </p>

                @using (Html.BeginForm("DeleteEvent", "Event", new {id = Model.EventId}, FormMethod.Post, new {role = "form"}))
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-primary">Onayla</button>
                    <a href="@Url.Action("MyEvents", "Event")" class="btn btn-default">İptal</a>
                }
            </div>
        </div>
    </div>
</div>