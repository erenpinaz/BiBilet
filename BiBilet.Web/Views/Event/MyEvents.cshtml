@{
    ViewBag.Title = "Etkinliklerim";
}

<section id="userEvents">
    <h1 class="page-header">
        @ViewBag.Title
        <small>
            <a href="@Url.Action("CreateEvent", "Event")">Yeni etkinlik</a>
        </small>
    </h1>

    <div class="panel panel-default">
        <div class="panel-body">
            <table id="events-table"
                   data-toggle="table"
                   data-locale="tr-TR"
                   data-url="@Url.Action("PopulateUserEvents", "Event")"
                   data-cache="false"
                   data-height="500"
                   data-pagination="true"
                   data-page-size="10"
                   data-page-list="[10, 20, 50]"
                   data-search="true"
                   data-show-columns="true"
                   data-show-refresh="true">
                <thead>
                <tr>
                    <th data-field="eventid" data-visible="false">Event ID</th>
                    <th data-field="title" data-formatter="eventTitleFormatter">Başlık</th>
                    <th data-field="organizer">Organizatör</th>
                    <th data-field="category">Kategori</th>
                    <th data-field="topic">Konu</th>
                    <th data-field="status" data-formatter="eventStatusFormatter">Yayın Durumu</th>
                    <th data-field="startdate" data-formatter="jsonDateFormatter">Başlangıç Tarihi</th>
                    <th data-field="enddate" data-formatter="jsonDateFormatter" data-visible="false">Bitiş Tarihi</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</section>