@using BiBilet.Domain.Entities.Application
@model BiBilet.Web.ViewModels.TicketEditModel

<div class="ticket-item">
    @using (Html.BeginCollectionItem("tickets"))
    {
        @Html.HiddenFor(m => m.TicketId)
        @Html.HiddenFor(m => m.Type)

        <div class="form-group">
            @Html.LabelFor(m => m.Title, new {@class = "col-md-2 control-label"})
            <div class="col-md-3">
                @Html.EditorFor(m => m.Title, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayPlaceholderFor(m => m.Title)}})
                @Html.ValidationMessageFor(m => m.Title)
            </div>
            <div class="col-md-2">
                @Html.EditorFor(m => m.Quantity, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayPlaceholderFor(m => m.Quantity)}})
                @Html.ValidationMessageFor(m => m.Quantity)
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    @if (Model.Type == TicketType.Free)
                    {
                        @Html.HiddenFor(m => m.Price)
                        <div style="margin-top: 7px;">Ücretsiz</div>
                    }
                    else
                    {
                        @Html.EditorFor(m => m.Price, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayPlaceholderFor(m => m.Price)}})
                        <span class="input-group-addon">TRY</span>
                    }
                </div>
                @Html.ValidationMessageFor(m => m.Price)
            </div>
            <div class="col-md-2">
                <a href="#" data-id="@Model.TicketId" class="btn btn-default delete-ticket">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </div>
        </div>
    }
</div>