@model BiBilet.Web.ViewModels.SearchEventEditModel

<section id="searchForm">
    @using (Html.BeginForm("SearchEvent", "Event", FormMethod.Get, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-12">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.q, new {@class = "form-control", autocomplete = "off", placeholder = Html.DisplayPlaceholderFor(m => m.q)})
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.q)
            </div>
        </div>
    }
</section>